<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    tools:context=".app.cliente.fragmet.InsertarReservaHabitacionCliente">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reservar Habitacion"
        android:textColor="#4b0082"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/r_nombrecliente"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cajatextologin"
        android:focusable="false"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:textColorHint="#4B0082"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:startIconDrawable="@drawable/cajatextouser">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtIdCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="text"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/r_fechainicio"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cajatextologin"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:textColorHint="#4B0082"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_nombrecliente"
        app:startIconDrawable="@drawable/fecha">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Fecha Inicio"
            android:inputType="text"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/r_fechafinal"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/cajatextologin"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:textColorHint="#4B0082"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_fechainicio"
        app:startIconDrawable="@drawable/fecha">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtFechaFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Fecha Final"
            android:inputType="text"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/r_habitacioncliente"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/cajatextologin"
        android:focusable="false"
        android:hint="Habitacion"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:textColorHint="#4B0082"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_fechafinal"
        app:startIconDrawable="@drawable/habitacion">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtIdHabitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/crear_reserva"
        android:layout_width="157dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/loginbotones"
        android:elevation="5dp"
        android:text="Reservar"
        android:textColor="#fff"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_habitacioncliente" />

</androidx.constraintlayout.widget.ConstraintLayout>