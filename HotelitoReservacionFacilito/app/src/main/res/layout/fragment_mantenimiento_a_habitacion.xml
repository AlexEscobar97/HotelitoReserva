<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.administrador.fragmet.MantenimientoAHabitacion"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvTituloHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Agregar Habitacion"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"
            android:shadowColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloHabitacion">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:startIconDrawable="@drawable/chabitacion">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNombreHabitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Habitacion" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:text="Estado de Habitacion" />
        <Spinner
                android:id="@+id/spinnerEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/OpcionEstado"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="392dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:text="Categoria de Habitacion" />

            <Spinner
                android:id="@+id/spinnerTipoHabitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="392dp" />

    </LinearLayout>

        <Button
            android:id="@+id/btnAgregarhabitacion"
            android:layout_width="183dp"
            android:layout_height="48dp"
            android:background="@drawable/botonagregar"
            android:text="Agregar"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.172" />


    </androidx.constraintlayout.widget.ConstraintLayout >